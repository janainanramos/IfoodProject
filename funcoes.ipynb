"Iniciio - Incluir Funções Deletar e Atualiza Notas aqui\n",
#Deleta aluno
def deleteStudent(students: list[dict]) -> bool:
  deleted = findStudent(students)
  formatStudent = '\n'.join([f'{key.title()}: {value}' for key, value in deleted[0].items()])
  
  if len(deleted) == 0:
    print('Student Not Found!')
    return False
  
  students.remove(deleted[0])
  return formatStudent

#Atualiza Notas Aluno
def updateGrades(students: list[dict]) -> list[dict]:
  student = findStudent(students)
    
  if len(student) > 0:
    grades = student[0]['Notas']
    if len(grades) < 4:
       grades.append(float(input("Digite a nota")))
       print(grades, "grades")
       student[0]['Notas'] = grades
    else:
       print("Todas as Notas já foram Lançadas")
    return student[0]  

 


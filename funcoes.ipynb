    "# Função que obter Aluno\n",
    "def findStudent(students: list[dict]) -> list[dict]:\n",
    "    name = getName()\n",
    "    student = list(filter(lambda students: name.title() in students[\"Nome\"], students))\n",
    "    if len(student) == 0:\n",
    "        return 'Student Not Found!'\n",
    "\n",
    "    return student"

    "# Função que Insere um novo aluno\n",
    "def insertStudent(students: list[dict]) -> bool:\n",
    "    newStudent = {\n",
    "        'Matricula': getMatricula(),\n",
    "        'Nome': getName(),\n",
    "        'Curso': getCurso(),\n",
    "        'Turno': getTurno(),\n",
    "        'Notas': []\n",
    "    }\n",
    "    students.append(newStudent)\n",
    "    return newStudent"

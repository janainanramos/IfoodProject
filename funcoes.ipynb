    "#Salva alterações realizadas no arquivo Json\n",
    "def saveData(students:list[dict], path:str = 'alunos.json') -> bool:\n",
    "    try:\n",
    "        with open(path, 'w') as arquivo:\n",
    "            arquivo.write(json.dumps(students))\n",
    "            return True\n",
    "    except Exception:\n",
    "        return False"
